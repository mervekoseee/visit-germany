    <%- include('../partials/header.ejs') %>

    <!-- Page container-->
    <div class="container mt-5 mb-md-4 py-5">
        <div class="row">
            <!-- Page content-->
            <div class="col-lg-8">
                <!-- Breadcrumb-->
                <nav class="mb-3 pt-2 pt-lg-3" aria-label="Breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Otel Düzenle</li>
                    </ol>
                </nav>

                <!-- form start  -->
        <form action="/hotels/<%= hotel._id %>?_method=PATCH" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
                    <!-- Basic info-->
                    <section class="card card-body border-0 shadow-sm p-4 mb-4" id="basic-info">
                        <h2 class="h4 mb-4"><i class="fi-info-circle text-primary fs-5 mt-n1 me-2"></i>Bilgiler</h2>
                        <div class="mb-3">
                            <label class="form-label" for="ab-title">Otel Adı
                                <span class="text-danger">*</span>
                            </label>
                            <input class="form-control" type="text" id="ab-title" placeholder="Title for your hotel" required name="hotel[name]" value="<%= hotel.name %>">
                        </div>
                    </section>

                <!-- Location-->
                <section class="card card-body border-0 shadow-sm p-4 mb-4" id="location">
                    <h2 class="h4 mb-4"><i class="fi-map-pin text-primary fs-5 mt-n1 me-2"></i>Adres</h2>
                    <div class="mb-3">
                        <label class="form-label" for="ab-address">Otel Adresi <span
                                class="text-danger">*</span></label>
                        <input class="form-control" type="text" id="ab-address" required name="hotel[address]" placeholder="Address of your hotel" value="<%= hotel.address %>">
                    </div>
                </section>

                <!-- Price range-->
                <section class="card card-body border-0 shadow-sm p-4 mb-4" id="price">
                    <h2 class="h4 mb-4"><i class="fi-cash text-primary fs-5 mt-n1 me-2"></i>Hotel Price</h2>
                    <label class="form-label" for="ab-price">Ücret <span
                            class="text-danger">*</span></label>
                    <div class="col-md-8 d-flex flex-sm-row flex-column px-0">
                        <div class="d-flex align-items-center me-sm-2 mb-sm-0 mb-2">
                            <input class="form-control" name="hotel[price]" id="ab-price" type="number" min="100" max="10000" step="100" placeholder="Hotel Price"
                                required value="<%= hotel.price %>">
                        </div>
                        <select class="form-select w-sm-25 ms-sm-0 ms-auto">
                            <option value="usd">&#36;</option>
                            <option value="eur">&#8364;</option>
                            <option value="gbp">&#163;</option>
                            <option value="jpy">&#165;</option>
                        </select>
                    </div>
                </section>

                <!-- Photos / video-->
                <section class="card card-body border-0 shadow-sm p-4 mb-4" id="photos">
                    <h2 class="h4 mb-4"><i class="fi-image text-primary fs-5 mt-n1 me-2"></i>Photos / video</h2>
                    <div class="alert alert-info mb-4" role="alert">
                        <div class="d-flex"><i class="fi-alert-circle me-2 me-sm-3"></i>
                            <p class="fs-sm mb-1">The maximum photo size is 8 MB. Formats: jpeg, jpg, png. Put the main
                                picture first.<br>The maximum video size is 10 MB. Formats: mp4, mov.</p>
                        </div>
                    </div>
                    <!-- <input  multiple class="file-uploader file-uploader-grid" type="file" name="image" data-max-file-size="10MB" accept="image/png, image/jpeg, video/mp4, video/mov" data-label-idle="&lt;div class=&quot;btn btn-primary rounded-pill mb-3&quot;&gt;&lt;i class=&quot;fi-cloud-upload me-1&quot;&gt;&lt;/i&gt;Upload photos / video&lt;/div&gt;&lt;br&gt;or drag them in"> -->
                    <div class="input-group mb-3">
                        <label class="input-group-text" for="inputGroupFile01">Upload</label>
                        <input type="file" name="image" class="form-control  file-uploader-grid" id="inputGroupFile01" data-max-file-size="10MB" accept="image/png, image/jpeg, video/mp4, video/mov" data-label-idle="&lt;div class=&quot;btn btn-primary rounded-pill mb-3&quot;&gt;&lt;i class=&quot;fi-cloud-upload me-1&quot;&gt;&lt;/i&gt;Upload photos / video&lt;/div&gt;&lt;br&gt;or drag them in" required multiple>
                    </div>
                </section>
                <!-- Action buttons -->
                <section class="d-sm-flex flex-row-reverse pt-2">

                    <input type="submit" value="Save and continue" class="btn btn-primary btn-lg d-block rounded-pill mb-2">
                </section>
            </div>
        </form>
            <!-- form end  -->

        </div>
    </div>
    <%- include('../partials/footer.ejs') %>